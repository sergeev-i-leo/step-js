{
  "compilerOptions": {
    "allowJs": true,
    "jsx": "react",
    "noImplicitAny": false,
    "target": "es5",
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "sourceMap": true,
    "baseUrl": "./",
    "paths": {
      "@step-js-core/*": ["src/step-js/src/core/*"],
      "@step-js-widgets/*": ["src/step-js/src/widgets/*"],
      "@step-js-views/*": ["src/step-js/src/views/*"],
      "@step-js-bootstrap-widgets/*": ["src/step-js/src/bootstrap-widgets/*"],
      "@step-js-documents/*": ["src/step-js/src/documents/*"]
    }
  },
  "exclude": [
    "node_modules",
    "react-example",
    "step-js-example"
  ]
}
